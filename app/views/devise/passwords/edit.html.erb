<div class="booyah-box col-lg-6 offset-lg-3 col-sm-10 offset-sm-1 col-12">
  <br>
  <h2 class="text-center">Change your password</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
    </div>

      <div class="d-flex flex-row justify-content-between">
      <div class="justify-content-start">
        <%= f.button :submit, "Change my password", class: "btn btn-outline-success justify-content-start" %>
      </div>
      <div class="justify-content-end">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <br>
  <% end %>
</div>
