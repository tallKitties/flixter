<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://vjs.zencdn.net/6.6.3/video-js.css" rel="stylesheet">
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar sticky-top navbar-expand-md navbar-dark bg-dark">
        <%= link_to "<h1>Flixter</h1>".html_safe, root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavContent" aria-controls="mainNavContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-between" id="mainNavContent">
          <div class="navbar-nav justify-content-start">
            <%= link_to "See All Courses", courses_path, class: "nav-item nav-link" %>
          </div>
          <div class="dropdown-divider"></div>
          <div class="navbar-nav justify-content-end">
            <% if user_signed_in? %>
              <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link nav-item' %>
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link nav-item' %>
            <% else %>
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link nav-item' %>
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link nav-item' %>
            <% end %>
          </div>
        </div>
      </nav>
      <div class="container-fluid">
        <% if notice.present? %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>

        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>

        <% if flash[:error].present? %>
          <div class="col-10 offset-1 alert alert-danger text-center">
            <%= flash[:error] %>
          </div>
        <% end %>

        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>Teachers</b>
            <br>
            <%= link_to 'Teach a Course', new_instructor_course_path %>
            <br>
            <%= link_to 'My Dashboard', dashboard_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br>
            <%= link_to 'Team', team_path %>
            <br>
            <%= link_to 'Careers', careers_path %>
            <br>
            <%= link_to 'Privacy Policy', privacy_path %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br>
              <%= mail_to 'bkautt@gmail.com' %>
          </div>
          <div class="col-12 col-sm-3">
            <b>Social</b>
            <br>
            <%= link_to 'https://github.com/tallKitties', target: "_blank" do %>
              <span class="fa fa-github fa-lg m-1"></span>
            <% end %>
            <%= link_to 'https://www.linkedin.com/in/benkautt/', target: "_blank" do %>
              <span class="fa fa-linkedin fa-lg m-1"></span>
            <% end %>
            <%= link_to 'https://www.instagram.com/tallkitties/', target: "_blank" do %>
              <span class="fa fa-instagram fa-lg m-1"></span>
            <% end %>
          </div>
      </div>
    </div>
    <script src="https://vjs.zencdn.net/6.6.3/video.js"></script>
    <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
